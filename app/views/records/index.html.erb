<p id="notice"><%= notice %></p>

<div class="pull-right">
  <%= link_to 'New Record', new_record_path, class: 'btn btn-primary' %>
</div>

<h1>Records</h1>



<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Birthdate</th>
      <th>Loss date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @records.each do |record| %>
      <tr>
        <td><%= record.name %></td>
        <td><%= record.description %></td>
        <td><%= record.birthdate %></td>
        <td><%= record.loss_date %></td>
        <td><%= link_to 'Show', record %></td>
        <td><%= link_to 'Edit', edit_record_path(record) %></td>
        <td><%= link_to 'Destroy', record, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>



<%= will_paginate @records, renderer: BootstrapPagination::Rails %>
